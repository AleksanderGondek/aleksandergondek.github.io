{
    "name": "aleksandergondek.github.io",
    "version": "0.0.1",
    "description": "This repository contains source-code for my website, as well as its contents.",
    "license": "Apache-2.0",
    "homepage": "https://aleksandergondek.github.io",
    "repository": "git@github.com:AleksanderGondek/aleksandergondek.github.io.git",
    "private": true,
    "author": "Aleksander Gondek",
    "main": "N/A",
    "scripts": {
        "build": "gatsby build",
        "develop": "gatsby develop",
        "lint": "yarn run lint:ts && yarn run lint:scss && yarn run lint:md",
        "lint:md": "remark .",
        "lint:scss": "stylelint src/**/*.scss --syntax scss",
        "lint:ts": "tslint \"./src/**/*.ts\" \"./src/**/*.tsx\"",
        "test": "yarn run lint && exit 1",
        "write": "plop --plopfile ./generators/plopfile.js"
    },
    "dependencies": {
        "@fortawesome/fontawesome": "^1.1.5",
        "@fortawesome/fontawesome-free-brands": "^5.0.10",
        "@fortawesome/fontawesome-free-solid": "^5.0.10",
        "@fortawesome/react-fontawesome": "0.1.0-1",
        "@types/lodash": "^4.14.113",
        "@types/node": "^9.4.7",
        "@types/react": "^16.0.40",
        "@types/react-dom": "^16.0.4",
        "@types/react-helmet": "^5.0.5",
        "@types/react-sidebar": "^2.2.3",
        "gatsby": "^1.9.277",
        "gatsby-cli": "^1.1.58",
        "gatsby-link": "^1.6.46",
        "gatsby-paginate": "^1.0.16",
        "gatsby-plugin-react-helmet": "^2.0.11",
        "gatsby-plugin-sass": "^1.0.23",
        "gatsby-plugin-sharp": "^1.6.48",
        "gatsby-plugin-typescript": "^1.4.18",
        "gatsby-plugin-typography": "^1.7.18",
        "gatsby-remark-emoji": "^0.0.2",
        "gatsby-remark-images": "^1.5.67",
        "gatsby-remark-prismjs": "^2.0.5",
        "gatsby-source-filesystem": "1.5.30",
        "gatsby-transformer-remark": "^1.7.44",
        "lodash": "^4.17.10",
        "plop": "^2.0.0",
        "prismjs": "^1.15.0",
        "react-helmet": "^5.2.0",
        "react-sidebar": "^2.3.2",
        "remark-cli": "^5.0.0",
        "remark-preset-lint-recommended": "^3.0.2",
        "stylelint": "^9.4.0",
        "stylelint-config-standard": "^18.2.0",
        "tslint": "^5.11.0",
        "typescript": "^3.0.1",
        "typography-theme-de-young": "^0.16.9"
    },
    "remarkConfig": {
        "plugins": [
            "remark-preset-lint-recommended",
            ["remark-lint-list-item-indent", false],
            ["remark-lint-no-shortcut-reference-link", false],
            ["remark-lint-no-undefined-references", false]
        ]
    },
    "stylelint": {
        "extends": "stylelint-config-standard",
        "rules": {
            "indentation": 4,
            "at-rule-no-unknown": [
                true,
                {
                    "ignoreAtRules": [
                        "include",
                        "mixin"
                    ]
                }
            ]
        }
    }
}
